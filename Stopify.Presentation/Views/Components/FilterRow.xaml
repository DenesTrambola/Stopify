<UserControl
    x:Class="Stopify.Presentation.Views.Components.FilterRow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:Stopify.Presentation.Helpers.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Grid.Row="3" Margin="15,20,0,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Title  -->
            <Button
                Name="TitleBtn"
                Grid.Column="0"
                Background="Transparent"
                BorderThickness="0"
                Click="TitleBtn_Click"
                Content="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                MouseEnter="TitleBtn_MouseEnter"
                MouseLeave="TitleBtn_MouseLeave" />

            <!--  Show all  -->
            <Button
                Name="ShowAllBtn"
                Grid.Column="2"
                Margin="0,0,10,0"
                VerticalAlignment="Bottom"
                Background="Transparent"
                BorderThickness="0"
                Click="TitleBtn_Click"
                Content="Show all"
                FontSize="13.5"
                FontWeight="Bold"
                Foreground="DarkGray"
                MouseEnter="ShowAllBtn_MouseEnter"
                MouseLeave="ShowAllBtn_MouseLeave" />
        </Grid>

        <!--  Filters  -->
        <StackPanel
            Grid.Row="1"
            Margin="0,15"
            Orientation="Horizontal">

            <!--  All  -->
            <Button
                Name="AllBtn"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Click="AllBtn_Click"
                MouseEnter="AllBtn_MouseEnter"
                MouseLeave="AllBtn_MouseLeave">
                <Border
                    Name="AllBorder"
                    Padding="13,6"
                    Background="White"
                    CornerRadius="15">
                    <TextBlock
                        Name="AllText"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="All" />
                </Border>
            </Button>

            <!--  Music  -->
            <Button
                Name="MusicBtn"
                Margin="7,0"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Click="MusicBtn_Click"
                MouseEnter="MusicBtn_MouseEnter"
                MouseLeave="MusicBtn_MouseLeave">
                <Border
                    Name="MusicBorder"
                    Padding="13,6"
                    Background="#2a2a2a"
                    CornerRadius="15">
                    <TextBlock
                        Name="MusicText"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Music" />
                </Border>
            </Button>

            <!--  Podcasts  -->
            <Button
                Name="PodcastsBtn"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Click="PodcastsBtn_Click"
                MouseEnter="PodcastsBtn_MouseEnter"
                MouseLeave="PodcastsBtn_MouseLeave">
                <Border
                    Name="PodcastsBorder"
                    Padding="13,6"
                    Background="#2a2a2a"
                    CornerRadius="15">
                    <TextBlock
                        Name="PodcastsText"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Podcasts" />
                </Border>
            </Button>
        </StackPanel>

        <!--  Items  -->
        <Controls:StretchyWrapPanel Grid.Row="2">
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
            <local:CommonItem />
        </Controls:StretchyWrapPanel>
    </Grid>
</UserControl>
