<UserControl
    x:Class="Stopify.Presentation.Views.Components.CommonItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button
        Name="GeneralItemBtn"
        MinWidth="162"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0"
        Click="GeneralItemBtn_Click"
        MouseEnter="GeneralItemBtn_MouseEnter"
        MouseLeave="GeneralItemBtn_MouseLeave">
        <Border
            Name="GeneralItemBorder"
            Padding="10"
            Background="#121212"
            BorderThickness="0"
            CornerRadius="7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Image  -->
                <Border
                    Grid.Row="0"
                    Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                    MinWidth="140.33"
                    MinHeight="140.33"
                    MaxWidth="210"
                    MaxHeight="210"
                    CornerRadius="6">
                    <Border.Background>
                        <ImageBrush ImageSource="../../Resources/song.jpg" />
                    </Border.Background>
                </Border>

                <!--  Play/Pause Button  -->
                <Button
                    Name="PlayBtn"
                    Grid.Row="0"
                    Width="52"
                    Height="52"
                    Margin="0,0,5,5"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PlayBtn_Click"
                    MouseEnter="PlayBtn_MouseEnter"
                    MouseLeave="PlayBtn_MouseLeave"
                    Opacity="0">
                    <Border
                        Name="PlayBorder"
                        Background="#3adf74"
                        CornerRadius="30">
                        <TextBlock
                            Name="PlayIcon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                            FontSize="23"
                            Foreground="Black"
                            Text="&#xf04b;" />
                    </Border>

                    <Button.RenderTransform>
                        <TranslateTransform x:Name="PlayBtnTransform" />
                    </Button.RenderTransform>
                </Button>

                <!--  Title  -->
                <Button
                    Name="TitleBtn"
                    Grid.Row="1"
                    MaxHeight="50"
                    Margin="0,7,0,5"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="White">
                    <TextBlock
                        LineHeight="20"
                        Text="Azahriah"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </Button>

                <!--  Description  -->
                <Button
                    Name="DescBtn"
                    Grid.Row="2"
                    MaxHeight="40"
                    Padding="0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="DarkGray">
                    <TextBlock
                        Name="DescText"
                        LineHeight="18"
                        Text="Artist"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </Button>
            </Grid>
        </Border>
    </Button>
</UserControl>
