<UserControl
    x:Class="Stopify.Presentation.Views.PlayerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Margin="8,0" SizeChanged="OnSizeChange">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width=".2*"
                MinWidth="230"
                MaxWidth="300" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition x:Name="OptionsBtnsColumn" Width="Auto" />
        </Grid.ColumnDefinitions>

        <!--  Song Info  -->
        <Grid Grid.Column="0" Margin="7,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Image  -->
            <Button
                Name="ImgBtn"
                Grid.Column="0"
                Height="58"
                Margin="0,1,0,0"
                Background="Transparent"
                BorderThickness="0"
                Click="ImgBtn_Click"
                MouseEnter="ImgBtn_MouseEnter"
                MouseLeave="ImgBtn_MouseLeave">
                <Border
                    Width="56"
                    Height="56"
                    CornerRadius="4">
                    <Border.Background>
                        <ImageBrush ImageSource="../Assets/Images/song.jpg" />
                    </Border.Background>
                </Border>
            </Button>

            <!--  Now Playing Show/Collapse  -->
            <Border
                Name="NowPlayingBorder"
                Grid.Column="0"
                Width="24"
                Height="24"
                Margin="5,23"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="Black"
                CornerRadius="30"
                IsHitTestVisible="False"
                Opacity=".7"
                Visibility="Hidden">
                <Button
                    x:Name="NowPlayingBtn"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="&#xf107;"
                    FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                    FontSize="16"
                    Foreground="DarkGray" />
            </Border>

            <!--  Title & Artists  -->
            <Grid
                Grid.Column="1"
                MaxWidth="120"
                Margin="14,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button
                    Name="Title"
                    Grid.Row="0"
                    Margin="0,4,0,2"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Title_Click"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="White"
                    MouseEnter="Underline_MouseEnter"
                    MouseLeave="Underline_MouseLeave">
                    <TextBlock
                        MaxHeight="20"
                        Text="{Binding Title}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </Button>

                <Button
                    Name="Artist"
                    Grid.Row="1"
                    Margin="0,-2.5,0,0"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="Artist_Click"
                    FontSize="12"
                    FontWeight="SemiBold"
                    Foreground="DarkGray"
                    MouseEnter="Underline_MouseEnter"
                    MouseLeave="Underline_MouseLeave">
                    <TextBlock
                        MaxHeight="20"
                        Text="{Binding Artist}"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />
                </Button>
            </Grid>

            <!--  Add to Liked Songs  -->
            <Button
                Name="SaveBtn"
                Grid.Column="2"
                Width="32"
                Height="30"
                Margin="5,5,0,0"
                Background="Transparent"
                BorderThickness="0"
                Click="SaveBtn_Click"
                MouseEnter="SaveBtn_MouseEnter"
                MouseLeave="SaveBtn_MouseLeave">
                <Border
                    Name="SaveBorder"
                    Width="16.5"
                    Height="16.5"
                    BorderBrush="#969696"
                    BorderThickness="1.8"
                    CornerRadius="30">
                    <TextBlock
                        Name="SaveText"
                        Margin="1.5,.7,0,0"
                        FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="11"
                        FontWeight="ExtraBold"
                        Foreground="#969696"
                        Text="+" />
                </Border>
            </Button>
        </Grid>

        <!--  Music Player  -->
        <Grid
            x:Name="MusicPlayer"
            Grid.Column="1"
            MaxWidth="700"
            Margin="20,0,18,0"
            HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  Player Buttons  -->
            <Grid
                Grid.Row="0"
                Width="235"
                Margin="3,17,0,-10"
                HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Shuffle  -->
                <Button
                    Name="ShuffleBtn"
                    Grid.Column="0"
                    Width="32"
                    Height="32"
                    Margin="11,0,0,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="ShuffleBtn_Click"
                    Content="&#xf074;"
                    FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                    FontSize="17"
                    Foreground="DarkGray"
                    MouseEnter="ShuffleBtn_MouseEnter"
                    MouseLeave="ShuffleBtn_MouseLeave" />

                <!--  Previous  -->
                <Button
                    Name="PreviousBtn"
                    Grid.Column="1"
                    Width="32"
                    Height="32"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PreviousBtn_Click"
                    Content="&#xf048;"
                    FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                    FontSize="19"
                    Foreground="DarkGray"
                    MouseEnter="PreviousBtn_MouseEnter"
                    MouseLeave="PreviousBtn_MouseLeave" />

                <!--  Play/Pause  -->
                <Border
                    Name="PlayBorder"
                    Grid.Column="2"
                    Width="32"
                    Height="32"
                    Background="White"
                    CornerRadius="30">
                    <Button
                        Name="PlayBtn"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PlayBtn_Click"
                        Content="&#xf04b;"
                        FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="17"
                        MouseEnter="PlayBtn_MouseEnter"
                        MouseLeave="PlayBtn_MouseLeave" />
                </Border>

                <!--  Next  -->
                <Button
                    Name="NextBtn"
                    Grid.Column="3"
                    Width="32"
                    Height="32"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="NextBtn_Click"
                    Content="&#xf051;"
                    FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                    FontSize="19"
                    Foreground="DarkGray"
                    MouseEnter="NextBtn_MouseEnter"
                    MouseLeave="NextBtn_MouseLeave" />

                <!--  Repeat  -->
                <Button
                    Name="RepeatBtn"
                    Grid.Column="4"
                    Width="32"
                    Height="32"
                    Margin="0,0,11,0"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="RepeatBtn_Click"
                    Content="&#xf363;"
                    FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                    FontSize="17"
                    Foreground="DarkGray"
                    MouseEnter="RepeatBtn_MouseEnter"
                    MouseLeave="RepeatBtn_MouseLeave" />

                <!--  Repeat one  -->
                <TextBlock
                    Name="RepeatText"
                    Grid.Column="4"
                    Margin="-10.5,-1.3,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="9"
                    FontWeight="Bold"
                    Foreground="#1ed760"
                    IsHitTestVisible="False"
                    Text="1"
                    Visibility="Hidden" />
            </Grid>

            <!--  Seek Bar  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Current Time  -->
                <TextBlock
                    Grid.Column="0"
                    Margin="0,13,2,0"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="DarkGray"
                    Text="{Binding CurrentTime}" />

                <!--  Media Bar  -->
                <Slider
                    Name="MediaBar"
                    Grid.Column="1"
                    MinWidth="220"
                    Margin="0,-1,1,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    IsSelectionRangeEnabled="True"
                    Maximum="{Binding MaxMediaValue}"
                    Minimum="0"
                    MouseEnter="Slider_MouseEnter"
                    MouseLeave="Slider_MouseLeave"
                    PreviewMouseDown="Slider_PreviewMouseDown"
                    PreviewMouseMove="Slider_PreviewMouseMove"
                    PreviewMouseUp="Slider_PreviewMouseUp"
                    Style="{DynamicResource SliderStyle1}"
                    Value="{Binding CurrentMediaValue}" />

                <!--  Total Time  -->
                <TextBlock
                    Grid.Column="2"
                    Margin="0,13,0,0"
                    FontSize="13"
                    FontWeight="SemiBold"
                    Foreground="DarkGray"
                    Text="{Binding TotalTime}" />
            </Grid>
        </Grid>

        <!--  Options  -->
        <Grid
            x:Name="OptionsBtns"
            Grid.Column="2"
            MaxWidth="290"
            Margin="0,3,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Now Playing  -->
            <Button
                Name="NowPlayingOption"
                Grid.Column="0"
                Height="32"
                Padding="6,3,6,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="NowPlayingOption_Click"
                Content="&#xf144;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="17"
                Foreground="#1ed760"
                MouseEnter="NowPlayingOption_MouseEnter"
                MouseLeave="NowPlayingOption_MouseLeave" />

            <!--  Lyrics  -->
            <Button
                Name="LyricsBtn"
                Grid.Column="1"
                Height="32"
                Padding="7,3,7,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="LyricsBtn_Click"
                Content="&#xf130;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="17"
                Foreground="#363636"
                MouseEnter="LyricsBtn_MouseEnter"
                MouseLeave="LyricsBtn_MouseLeave" />

            <!--  Queue  -->
            <Button
                Name="QueueBtn"
                Grid.Column="2"
                Height="32"
                Padding="8,3,8,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="QueueBtn_Click"
                Content="&#xf039;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="15"
                Foreground="DarkGray"
                MouseEnter="QueueBtn_MouseEnter"
                MouseLeave="QueueBtn_MouseLeave" />

            <!--  Connect to Device  -->
            <Button
                Name="ConnectBtn"
                Grid.Column="3"
                Height="32"
                Padding="8,3,8,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="ConnectBtn_Click"
                Content="&#xe4e5;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="15"
                Foreground="#363636"
                MouseEnter="ConnectBtn_MouseEnter"
                MouseLeave="ConnectBtn_MouseLeave" />

            <!--  Volume Button  -->
            <Button
                Name="VolumeBtn"
                Grid.Column="4"
                Height="32"
                Margin="0,0,1,0"
                Padding="5,2,2,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="VolumeBtn_Click"
                Content="&#xf028;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="14"
                Foreground="DarkGray"
                MouseEnter="VolumeBtn_MouseEnter"
                MouseLeave="VolumeBtn_MouseLeave" />

            <!--  Volume Bar  -->
            <Slider
                Name="VolumeBar"
                Grid.Column="5"
                MinWidth="52"
                MaxWidth="150"
                Margin="3,1,1.5,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Panel.ZIndex="1"
                BorderThickness="0"
                IsSelectionRangeEnabled="True"
                Maximum="1"
                Minimum="0"
                MouseEnter="Slider_MouseEnter"
                MouseLeave="Slider_MouseLeave"
                PreviewMouseDown="Slider_PreviewMouseDown"
                PreviewMouseMove="Slider_PreviewMouseMove"
                PreviewMouseUp="Slider_PreviewMouseUp"
                Style="{DynamicResource SliderStyle1}"
                ValueChanged="VolumeBar_ValueChanged"
                Value="{Binding VolumeValue}" />

            <!--  Volume Bar Cover  -->
            <Label
                Name="VolumeBarCover"
                Grid.Column="5"
                Height="50"
                HorizontalAlignment="Stretch"
                Panel.ZIndex="0"
                Background="Black"
                Opacity="0" />

            <!--  Full Screen  -->
            <Button
                Name="FullScreenBtn"
                Grid.Column="6"
                Height="32"
                Padding="10,3,10,0"
                HorizontalAlignment="Right"
                Background="Transparent"
                BorderThickness="0"
                Click="FullScreenBtn_Click"
                Content="&#xf424;"
                FontFamily="../Assets/Fonts/#Font Awesome 6 Free Solid"
                FontSize="13.5"
                Foreground="DarkGray"
                MouseEnter="FullScreenBtn_MouseEnter"
                MouseLeave="FullScreenBtn_MouseLeave" />
        </Grid>
    </Grid>
</UserControl>
