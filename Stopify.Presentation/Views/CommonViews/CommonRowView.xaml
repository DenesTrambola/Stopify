<UserControl
    x:Class="Stopify.Presentation.Views.CommonViews.CommonRowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Stopify.Presentation.Helpers.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.CommonViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel Margin="4.5,20" Orientation="Vertical">
        <!--  Header  -->
        <DockPanel Margin="11,0,19,5">
            <!--  Category  -->
            <Button
                Name="CategoryBtn"
                Background="Transparent"
                BorderThickness="0"
                Click="CategoryBtn_Click"
                Content="{Binding Category, RelativeSource={RelativeSource AncestorType=UserControl}}"
                DockPanel.Dock="Left"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                MouseEnter="CategoryBtn_MouseEnter"
                MouseLeave="CategoryBtn_MouseLeave" />

            <!--  Show all  -->
            <Button
                Name="ShowAllBtn"
                Margin="0,0,0,1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Background="Transparent"
                BorderThickness="0"
                Click="ShowAllBtn_Click"
                Content="Show all"
                DockPanel.Dock="Right"
                FontSize="13.5"
                FontWeight="Bold"
                Foreground="DarkGray"
                MouseEnter="ShowAllBtn_MouseEnter"
                MouseLeave="ShowAllBtn_MouseLeave" />
        </DockPanel>

        <!--  Items  -->
        <ItemsControl>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:StretchyWrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
            <local:CommonItemView />
        </ItemsControl>
    </StackPanel>
</UserControl>
