<Page
    x:Class="Stopify.Presentation.Views.PlaylistView.PlaylistViewMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.PlaylistView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PlaylistView"
    Loaded="Playlist_Loaded"
    SizeChanged="Playlist_SizeChanged"
    mc:Ignorable="d">

    <Border CornerRadius="8">
        <Grid>
            <!--  Sticky Header  -->
            <Grid
                Name="StickyHeader"
                Height="0"
                Panel.ZIndex="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Playlist Info  -->
                <Border
                    Name="StickyHeaderBg"
                    Grid.Row="0"
                    Background="Transparent"
                    CornerRadius="8 8 0 0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Play/Pause  -->
                        <Button
                            Grid.Column="0"
                            Width="50"
                            Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                            Margin="15,7,7,7"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">

                            <Border Background="#1ed760" CornerRadius="30">
                                <TextBlock
                                    Margin="2,15,0,15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                    FontSize="19"
                                    Text="&#xf04b;" />
                            </Border>
                        </Button>

                        <!--  Title  -->
                        <TextBlock
                            Grid.Column="1"
                            MaxHeight="35"
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            LineStackingStrategy="BlockLineHeight"
                            Text="Coding Music  Programming Playlist"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>

                <local:PlaylistViewHeader Grid.Row="1" Background="#1f1f1f" />
            </Grid>

            <!--  Main  -->
            <ScrollViewer
                Name="Scroller"
                Panel.ZIndex="0"
                ScrollChanged="Scroller_ScrollChanged"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop x:Name="ScrollerBg" Offset=".25" Color="Transparent" />
                            <GradientStop Offset=".65" Color="#121212" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Main Header  -->
                    <Grid
                        Name="MainHeader"
                        Grid.Row="0"
                        Height="187"
                        VerticalAlignment="Top"
                        Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width=".32*" MinWidth="160" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Playlist Image  -->
                        <Border
                            Grid.Column="0"
                            Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                            MinWidth="126"
                            MaxWidth="170"
                            Margin="17,0,17,18"
                            VerticalAlignment="Bottom"
                            CornerRadius="4">

                            <Border.Background>
                                <ImageBrush ImageSource="../../Resources/song.jpg" />
                            </Border.Background>
                        </Border>

                        <!--  Playlist Info  -->
                        <Grid
                            Grid.Column="1"
                            Margin="0,0,17,17"
                            VerticalAlignment="Bottom">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Type  -->
                                <TextBlock
                                    Grid.Row="0"
                                    Margin="0,-1,0,3"
                                    FontSize="13.5"
                                    FontWeight="SemiBold"
                                    Foreground="LightGray"
                                    Text="Public Playlist" />

                                <!--  Title  -->
                                <TextBlock
                                    Name="PlaylistTitle"
                                    Grid.Row="1"
                                    FontSize="23"
                                    FontWeight="UltraBold"
                                    Foreground="White"
                                    Text="Coding Music  Programming Playlist"
                                    TextTrimming="WordEllipsis"
                                    TextWrapping="Wrap" />

                                <!--  Description  -->
                                <TextBlock
                                    Grid.Row="2"
                                    MaxHeight="19"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="DarkGray"
                                    LineHeight="18"
                                    Text="best coding music - best coding songs - best coding chill -"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />

                                <!--  Info  -->
                                <WrapPanel Grid.Row="3" Margin="0,9,0,0">
                                    <!--  Author  -->
                                    <StackPanel Orientation="Horizontal">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            Margin="0,0,4,0"
                                            CornerRadius="30">

                                            <Border.Background>
                                                <ImageBrush ImageSource="../../Resources/stopify-icon.ico" />
                                            </Border.Background>
                                        </Border>

                                        <Button
                                            Name="HeaderAuthor"
                                            Margin="0,0,0,1"
                                            Padding="0"
                                            Background="Transparent"
                                            BorderBrush="White"
                                            BorderThickness="0"
                                            Click="HeaderAuthor_Click"
                                            Content="Azahriah"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            MouseEnter="HeaderAuthor_MouseEnter"
                                            MouseLeave="HeaderAuthor_MouseLeave" />
                                    </StackPanel>

                                    <!--  Saves Count  -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Height="18"
                                            Margin="5,-9,5,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="DarkGray"
                                            Text="·" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="DarkGray"
                                            Text="97,791" />
                                        <TextBlock
                                            Margin="4,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="DarkGray"
                                            Text="saves" />
                                    </StackPanel>

                                    <!--  Songs/Duration  -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Height="18"
                                            Margin="5,-9,5,0"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="DarkGray"
                                            Text="·" />
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="DarkGray"
                                            Text="200" />
                                        <TextBlock
                                            Margin="4,0,0,0"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="DarkGray"
                                            Text="songs, " />

                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="DarkGray"
                                            Text="7 hr 16 min" />
                                    </StackPanel>
                                </WrapPanel>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--  Control Buttons  -->
                    <Grid Grid.Row="1" Margin="-2,14,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid
                            Grid.Column="0"
                            Margin="17,0,3,0"
                            HorizontalAlignment="Left">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Play/Pause  -->
                            <Button
                                Name="PlayBtn"
                                Grid.Column="0"
                                Width="50"
                                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="PlayBtn_Click"
                                MouseEnter="PlayBtn_MouseEnter"
                                MouseLeave="PlayBtn_MouseLeave">

                                <Border
                                    Name="PlayBorder"
                                    Background="#1ed760"
                                    CornerRadius="30">
                                    <TextBlock
                                        Name="PlayIcon"
                                        Margin="2,15,0,15"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                        FontSize="20"
                                        IsHitTestVisible="False"
                                        Text="&#xf04b;" />
                                </Border>
                            </Button>

                            <!--  Shuffle  -->
                            <Button
                                Name="ShuffleBtn"
                                Grid.Column="1"
                                Width="32"
                                Height="32"
                                Margin="19,0,0,0"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="ShuffleBtn_Click"
                                Content="&#xf074;"
                                FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                FontSize="23"
                                Foreground="DarkGray"
                                MouseEnter="ShuffleBtn_MouseEnter"
                                MouseLeave="ShuffleBtn_MouseLeave" />

                            <!--  Save (Width: 24)  -->
                            <Button
                                Name="SaveBtn"
                                Grid.Column="2"
                                Width="24"
                                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                Margin="12,0"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="SaveBtn_Click"
                                MouseEnter="SaveBtn_MouseEnter"
                                MouseLeave="SaveBtn_MouseLeave">
                                <Border
                                    Name="SaveBorder"
                                    Background="Transparent"
                                    BorderBrush="DarkGray"
                                    BorderThickness="2"
                                    CornerRadius="30">
                                    <TextBlock
                                        Name="SaveText"
                                        Margin="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                        FontSize="15"
                                        Foreground="DarkGray"
                                        Text="+" />
                                </Border>
                            </Button>

                            <!--  Download  -->
                            <Button
                                Name="DownloadBtn"
                                Grid.Column="3"
                                Width="24"
                                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                Margin="4,0"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="DownloadBtn_Click"
                                MouseEnter="DownloadBtn_MouseEnter"
                                MouseLeave="DownloadBtn_MouseLeave">
                                <Border
                                    Name="DownloadBorder"
                                    BorderBrush="DarkGray"
                                    BorderThickness="2"
                                    CornerRadius="30">
                                    <TextBlock
                                        Name="DownloadText"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                        FontSize="13"
                                        Foreground="DarkGray"
                                        Text="&#xf063;" />
                                </Border>
                            </Button>

                            <!--  More Options  -->
                            <Button
                                Name="OptionsBtn"
                                Grid.Column="4"
                                Width="25"
                                Height="45"
                                Margin="12,0,0,1"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="OptionsBtn_Click"
                                Content="• • •"
                                FontSize="12"
                                Foreground="DarkGray"
                                MouseEnter="OptionsBtn_MouseEnter"
                                MouseLeave="OptionsBtn_MouseLeave" />
                        </Grid>

                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Search Button  -->
                            <Button
                                Name="SearchBtn"
                                Grid.Column="0"
                                Width="32"
                                Height="32"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="SearchBtn_Click"
                                MouseEnter="SearchBtn_MouseEnter"
                                MouseLeave="SearchBtn_MouseLeave">

                                <Border
                                    Name="SearchBorder"
                                    Background="#121212"
                                    CornerRadius="30">
                                    <TextBlock
                                        Name="SearchText"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                        FontSize="15"
                                        Foreground="DarkGray"
                                        Text="&#xf002;" />
                                </Border>
                            </Button>

                            <!--  Search Bar  -->
                            <Border
                                Name="SearchBar"
                                Grid.Column="1"
                                Width="0"
                                Margin="-1,10,0,10"
                                Background="#272727"
                                CornerRadius="0 5 5 0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Text  -->
                                    <TextBox
                                        Name="SearchBox"
                                        Grid.Column="0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="DarkGray"
                                        MouseEnter="SearchBox_MouseEnter"
                                        MouseLeave="SearchBox_MouseLeave"
                                        TextChanged="SearchBox_TextChanged" />

                                    <!--  Placeholder  -->
                                    <TextBlock
                                        Name="SearchbarText"
                                        Grid.Column="0"
                                        Margin="2,0,0,0"
                                        VerticalAlignment="Center"
                                        Panel.ZIndex="0"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="DarkGray"
                                        Text="Search in playlist" />

                                    <!--  Close  -->
                                    <Button
                                        Name="SearchCloseBtn"
                                        Grid.Column="1"
                                        Padding="7,0"
                                        Panel.ZIndex="2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="SearchCloseBtn_Click"
                                        Content="✕"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="DarkGray" />
                                </Grid>
                            </Border>
                        </Grid>

                        <!--  Custom order Menu Filter  -->
                        <Grid
                            Grid.Column="2"
                            Margin="7,0,17,0"
                            HorizontalAlignment="Right">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Name="CustomOrderBtn"
                                Grid.Column="1"
                                Padding="0,5"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="CustomOrderBtn_Click"
                                MouseEnter="CustomOrderBtn_MouseEnter"
                                MouseLeave="CustomOrderBtn_MouseLeave">

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Name="CustomOrderFilterText"
                                        Width="Auto"
                                        Padding="8,0,0,2"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="DarkGray"
                                        Text="Custom order" />
                                    <TextBlock
                                        Name="CustomOrderFilterIcon"
                                        Padding="8,0"
                                        VerticalAlignment="Center"
                                        FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                                        FontSize="16"
                                        Foreground="DarkGray"
                                        Text="&#xf03a;" />
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>

                    <!--  Playlist Header  -->
                    <local:PlaylistViewHeader Grid.Row="2" Margin="0,16,0,0" />

                    <!--  Songs  -->
                    <ItemsControl Grid.Row="3" Margin="16,7,0,7">
                        <local:PlaylistViewItem />
                    </ItemsControl>

                    <!--  Recommended  -->
                    <Grid Grid.Row="4" Margin="16,20,0,20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            FontSize="25"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Recommended" />

                        <TextBlock
                            Grid.Row="1"
                            Margin="0,5"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Foreground="DarkGray"
                            Text="Based on what's in this playlist" />

                        <ItemsControl Grid.Row="2" Margin="0,15">
                            <local:PlaylistViewItem />
                        </ItemsControl>

                        <Button
                            Name="RefreshBtn"
                            Grid.Row="3"
                            Margin="5,0"
                            Padding="25,10"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="RefreshBtn_Click"
                            Content="Refresh"
                            FontSize="17"
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            MouseEnter="RefreshBtn_MouseEnter"
                            MouseLeave="RefreshBtn_MouseLeave" />
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
