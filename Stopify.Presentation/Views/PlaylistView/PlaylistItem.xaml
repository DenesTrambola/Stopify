<UserControl
    x:Class="Stopify.Presentation.Views.PlaylistView.PlaylistItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.PlaylistView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    SizeChanged="PlaylistItem_SizeChanged"
    mc:Ignorable="d">

    <Button
        Name="PlaylistItemBtn"
        Height="59"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0"
        Click="PlaylistItemBtn_GotFocus"
        GotFocus="PlaylistItemBtn_GotFocus"
        LostFocus="PlaylistItemBtn_LostFocus"
        MouseDoubleClick="PlaylistItemBtn_MouseDoubleClick"
        MouseEnter="PlaylistItemBtn_MouseEnter"
        MouseLeave="PlaylistItemBtn_MouseLeave">
        <Border
            Name="PlaylistItemBorder"
            Background="Transparent"
            CornerRadius="4">

            <Grid Margin="0,7.5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Name="AlbumColumn" Width="Auto" />
                    <ColumnDefinition Name="DateColumn" Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Number  -->
                <Grid
                    Name="Number"
                    Grid.Column="0"
                    Width="29"
                    Margin="0,-3,21,0">

                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="19"
                        Foreground="DarkGray"
                        Text="1" />
                </Grid>

                <!--  Play Button  -->
                <Button
                    Name="PlayBtn"
                    Grid.Column="0"
                    Width="0"
                    Margin="17.1,0"
                    Padding="3,2"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PlayBtn_Click"
                    Content="&#xf04b;"
                    FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                    FontSize="13"
                    Foreground="White"
                    MouseEnter="PlayBtn_MouseEnter"
                    MouseLeave="PlayBtn_MouseLeave" />

                <!--  Song Image  -->
                <Border
                    Name="ImgBorder"
                    Grid.Column="1"
                    Width="40"
                    Height="40"
                    Margin="-1,0,0,0"
                    CornerRadius="4">

                    <Border.Background>
                        <ImageBrush ImageSource="../../Resources/song.jpg" />
                    </Border.Background>
                </Border>

                <!--  Title/Authors  -->
                <Grid Grid.Column="2" Margin="11,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Title  -->
                    <TextBlock
                        Name="TitleText"
                        Grid.Row="0"
                        MaxHeight="22"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Foreground="White"
                        Text="Cry Me A River"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="Wrap" />

                    <!--  Authors  -->
                    <ItemsControl
                        Grid.Row="1"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="DarkGray">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <Button
                            Background="Transparent"
                            BorderThickness="0"
                            Content="Peaceful Melody"
                            Foreground="DarkGray" />

                        <TextBlock Margin="0,0,1,0" Text="," />

                        <Button Background="Transparent" BorderThickness="0">
                            <TextBlock
                                Foreground="DarkGray"
                                Text="soave lofi"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </Button>
                    </ItemsControl>
                </Grid>

                <!--  Album  -->
                <Button
                    Name="AlbumBtn"
                    Grid.Column="3"
                    Width="0"
                    Margin="30,0,10,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="AlbumBtn_Click"
                    Content="Cry Me A River"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="DarkGray"
                    MouseEnter="AlbumBtn_MouseEnter"
                    MouseLeave="AlbumBtn_MouseLeave" />

                <!--  Date added  -->
                <Button
                    Name="DateBtn"
                    Grid.Column="4"
                    Width="0"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="3 hours ago"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="DarkGray" />

                <!--  Save  -->
                <Button
                    Name="SaveBtn"
                    Grid.Column="5"
                    Width="17.5"
                    Height="17.5"
                    Margin="20,0,15,0"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="SaveBtn_Click"
                    MouseEnter="SaveBtn_MouseEnter"
                    MouseLeave="SaveBtn_MouseLeave"
                    Visibility="Hidden">
                    <Border
                        Name="SaveBorder"
                        Background="Transparent"
                        BorderBrush="DarkGray"
                        BorderThickness="1.3"
                        CornerRadius="30">
                        <TextBlock
                            Name="SaveText"
                            Margin="2,1,0,0"
                            FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                            FontSize="10"
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            Text="+" />
                    </Border>
                </Button>

                <!--  Duration  -->
                <TextBlock
                    Name="DurationText"
                    Grid.Column="6"
                    Margin="15,0"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Foreground="DarkGray"
                    Text="2:30" />

                <!--  Options  -->
                <Button
                    Name="OptionsBtn"
                    Grid.Column="7"
                    Margin="11,0,15,2"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="OptionsBtn_Click"
                    Content="• • •"
                    FontSize="11"
                    Foreground="White"
                    MouseEnter="OptionsBtn_MouseEnter"
                    MouseLeave="OptionsBtn_MouseLeave"
                    Visibility="Hidden" />
            </Grid>
        </Border>
    </Button>
</UserControl>
