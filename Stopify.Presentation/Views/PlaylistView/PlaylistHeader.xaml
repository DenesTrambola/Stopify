<UserControl
    x:Class="Stopify.Presentation.Views.PlaylistView.PlaylistHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.PlaylistView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    SizeChanged="PlaylistHeader_SizeChanged"
    mc:Ignorable="d">

    <StackPanel>
        <Grid Height="37" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Name="AlbumColumn" Width="Auto" />
                <ColumnDefinition Name="DateColumn" Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Number  -->
            <TextBlock
                Name="NumberText"
                Grid.Column="0"
                Margin="38,0,15,1"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="DarkGray"
                Text="#" />

            <!--  Title  -->
            <Button
                Name="TitleBtn"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="TitleBtn_Click"
                MouseEnter="TitleBtn_MouseEnter"
                MouseLeave="TitleBtn_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Title Text  -->
                    <TextBlock
                        Name="TitleText"
                        Grid.Column="0"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="DarkGray"
                        Text="Title" />

                    <!--  Sorting symbol  -->
                    <TextBlock
                        Name="TitleSort"
                        Grid.Column="1"
                        Padding="12,0,2,0"
                        VerticalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="15"
                        Foreground="#1ed760"
                        Text="&#xf0d8;"
                        Visibility="Hidden" />
                </Grid>
            </Button>

            <!--  Album  -->
            <Button
                Name="AlbumBtn"
                Grid.Column="2"
                Width="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="AlbumBtn_Click"
                MouseEnter="AlbumBtn_MouseEnter"
                MouseLeave="AlbumBtn_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Title Text  -->
                    <TextBlock
                        Name="AlbumText"
                        Grid.Column="0"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="DarkGray"
                        Text="Album" />

                    <!--  Sorting symbol  -->
                    <TextBlock
                        Name="AlbumSort"
                        Grid.Column="1"
                        Padding="12,0,2,0"
                        VerticalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="15"
                        Foreground="#1ed760"
                        Text="&#xf0d8;"
                        Visibility="Hidden" />
                </Grid>
            </Button>

            <!--  Date added  -->
            <Button
                Name="DateBtn"
                Grid.Column="3"
                Width="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="DateBtn_Click"
                MouseEnter="DateBtn_MouseEnter"
                MouseLeave="DateBtn_MouseLeave">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Title Text  -->
                    <TextBlock
                        Name="DateText"
                        Grid.Column="0"
                        Margin="0,0,0,2"
                        VerticalAlignment="Center"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="DarkGray"
                        Text="Date added" />

                    <!--  Sorting symbol  -->
                    <TextBlock
                        Name="DateSort"
                        Grid.Column="1"
                        Padding="12,0,2,0"
                        VerticalAlignment="Center"
                        FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="15"
                        Foreground="#1ed760"
                        Text="&#xf0d8;"
                        Visibility="Hidden" />
                </Grid>
            </Button>

            <!--  Duration  -->
            <Button
                Name="DurationBtn"
                Grid.Column="4"
                Margin="0,0,65,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                Click="DurationBtn_Click"
                MouseEnter="DurationBtn_MouseEnter"
                MouseLeave="DurationBtn_MouseLeave">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  Sorting symbol  -->
                    <TextBlock
                        Name="DurationSort"
                        Grid.Column="0"
                        Padding="10,0,12,0"
                        FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="15"
                        Foreground="#1ed760"
                        Text="&#xf0d8;"
                        Visibility="Hidden" />

                    <!--  Clock  -->
                    <TextBlock
                        Name="DurationText"
                        Grid.Column="1"
                        FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                        FontSize="15"
                        Foreground="DarkGray"
                        Text="&#xf017;" />
                </Grid>
            </Button>
        </Grid>

        <!--  Playlist Header Bottom Border  -->
        <Border
            Grid.Row="1"
            BorderBrush="#313131"
            BorderThickness="0,0,0,1.2" />
    </StackPanel>
</UserControl>
