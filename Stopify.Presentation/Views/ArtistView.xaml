<Page
    x:Class="Stopify.Presentation.Views.ArtistView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Components="clr-namespace:Stopify.Presentation.Views.Components"
    xmlns:Controls="clr-namespace:Stopify.Presentation.Helpers.Controls"
    xmlns:Playlist="clr-namespace:Stopify.Presentation.Views.PlaylistView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ArtistView"
    Loaded="ArtistView_Loaded"
    SizeChanged="ArtistView_SizeChanged"
    mc:Ignorable="d">

    <Border CornerRadius="8">
        <Grid>
            <!--  Sticky Header  -->
            <Grid
                Name="StickyHeader"
                Height="0"
                VerticalAlignment="Top"
                Panel.ZIndex="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Artist Info  -->
                <Border
                    Name="StickyHeaderBg"
                    Grid.Row="0"
                    Background="Transparent"
                    CornerRadius="8 8 0 0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Play/Pause  -->
                        <Button
                            Grid.Column="0"
                            Width="50"
                            Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                            Margin="15,7,7,7"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0">

                            <Border Background="#1ed760" CornerRadius="30">
                                <TextBlock
                                    Margin="2,15,0,15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                                    FontSize="19"
                                    Text="&#xf04b;" />
                            </Border>
                        </Button>

                        <!--  Title  -->
                        <TextBlock
                            Grid.Column="1"
                            MaxHeight="35"
                            Margin="0,0,20,0"
                            VerticalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Azahriah"
                            TextTrimming="CharacterEllipsis"
                            TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Main Panel  -->
            <ScrollViewer
                Name="Scroller"
                Panel.ZIndex="0"
                ScrollChanged="Scroller_ScrollChanged"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop x:Name="ScrollerBg" Offset=".1" Color="Transparent" />
                            <GradientStop Offset=".25" Color="#121212" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  Main Header  -->
                    <Border
                        Name="MainHeader"
                        Grid.Row="0"
                        CornerRadius="8 8 0 0">
                        <Grid Height="187" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".32*" MinWidth="160" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  Artist Profile  -->
                            <Border
                                Grid.Column="0"
                                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                MinWidth="126"
                                MaxWidth="170"
                                Margin="17,0,17,18"
                                VerticalAlignment="Bottom"
                                CornerRadius="100">

                                <Border.Background>
                                    <ImageBrush ImageSource="../../Assets/Images/song.jpg" />
                                </Border.Background>
                            </Border>

                            <!--  Artist Info  -->
                            <Grid
                                Grid.Column="1"
                                Margin="0,0,17,17"
                                VerticalAlignment="Bottom">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!--  Type  -->
                                    <Grid Grid.Row="0" Margin="2,0,0,-5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" Margin="0,1,9,0">
                                            <TextBlock
                                                FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                                                FontSize="17"
                                                Foreground="#4cb3ff"
                                                Text="&#xf0a3;" />

                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                                                FontSize="10"
                                                Foreground="White"
                                                Text="&#xf00c;" />
                                        </Grid>

                                        <TextBlock
                                            Grid.Column="1"
                                            FontSize="14"
                                            FontWeight="SemiBold"
                                            Foreground="LightGray"
                                            Text="Verified Artist" />
                                    </Grid>

                                    <!--  Title  -->
                                    <TextBlock
                                        Name="ArtistName"
                                        Grid.Row="1"
                                        FontSize="70"
                                        FontWeight="UltraBold"
                                        Foreground="White"
                                        Text="Azahriah"
                                        TextTrimming="WordEllipsis"
                                        TextWrapping="Wrap" />

                                    <!--  Monthly Listeners  -->
                                    <StackPanel
                                        Grid.Row="2"
                                        Margin="0,8,0,5"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="17"
                                            FontWeight="SemiBold"
                                            Foreground="LightGray"
                                            Text="700,000"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap" />

                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="LightGray"
                                            Text=" monthly listeners"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>

                    <!--  Control Buttons  -->
                    <Grid
                        Grid.Row="1"
                        Margin="15,14,0,0"
                        HorizontalAlignment="Left">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Play/Pause  -->
                        <Button
                            Name="PlayBtn"
                            Grid.Column="0"
                            Width="50"
                            Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                            HorizontalContentAlignment="Stretch"
                            VerticalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="PlayBtn_Click"
                            MouseEnter="PlayBtn_MouseEnter"
                            MouseLeave="PlayBtn_MouseLeave">

                            <Border
                                Name="PlayBorder"
                                Background="#1ed760"
                                CornerRadius="30">
                                <TextBlock
                                    Name="PlayIcon"
                                    Margin="2,15,0,15"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                                    FontSize="20"
                                    IsHitTestVisible="False"
                                    Text="&#xf04b;" />
                            </Border>
                        </Button>

                        <!--  Shuffle  -->
                        <Button
                            Name="ShuffleBtn"
                            Grid.Column="1"
                            Width="32"
                            Height="32"
                            Margin="19,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ShuffleBtn_Click"
                            Content="&#xf074;"
                            FontFamily="../../Assets/Fonts/#Font Awesome 6 Free Solid"
                            FontSize="23"
                            Foreground="DarkGray"
                            MouseEnter="ShuffleBtn_MouseEnter"
                            MouseLeave="ShuffleBtn_MouseLeave" />

                        <!--  Follow  -->
                        <Button
                            Name="FollowBtn"
                            Grid.Column="2"
                            Margin="11,0"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Stretch"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="FollowBtn_Click"
                            MouseEnter="FollowBtn_MouseEnter"
                            MouseLeave="FollowBtn_MouseLeave">

                            <Border
                                Name="FollowBorder"
                                Padding="14,6"
                                BorderBrush="DarkGray"
                                BorderThickness="1.5"
                                CornerRadius="15">

                                <TextBlock
                                    Name="FollowText"
                                    Margin="0,0,0,1"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Foreground="White"
                                    Text="Follow" />
                            </Border>
                        </Button>

                        <!--  More Options  -->
                        <Button
                            Name="OptionsBtn"
                            Grid.Column="4"
                            Width="25"
                            Height="45"
                            Margin="4,0,0,1"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="OptionsBtn_Click"
                            Content="• • •"
                            FontSize="12"
                            Foreground="DarkGray"
                            MouseEnter="OptionsBtn_MouseEnter"
                            MouseLeave="OptionsBtn_MouseLeave" />
                    </Grid>

                    <!--  Popular  -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Margin="15,20,0,0"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="Popular" />

                        <ItemsControl Grid.Row="1" Margin="16,15,0,0">
                            <Playlist:PlaylistItem />
                        </ItemsControl>

                        <!--  See more  -->
                        <Button
                            Name="SeeMoreBtn"
                            Grid.Row="2"
                            Margin="20,1"
                            Padding="12,13"
                            HorizontalAlignment="Left"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="SeeMoreBtn_Click"
                            Content="See more"
                            FontSize="14.4"
                            FontWeight="Bold"
                            Foreground="DarkGray"
                            MouseEnter="SeeMoreBtn_MouseEnter"
                            MouseLeave="SeeMoreBtn_MouseLeave" />
                    </Grid>

                    <!--  Discography  -->
                    <Grid Grid.Row="3" Margin="15,50,0,30">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  Header  -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Title  -->
                            <Button
                                Name="DiscographyBtn"
                                Grid.Column="0"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="DiscographyBtn_Click"
                                Content="Discography"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="White"
                                MouseEnter="CategoryTitle_MouseEnter"
                                MouseLeave="CategoryTitle_MouseLeave" />

                            <!--  Show all  -->
                            <Button
                                Grid.Column="2"
                                Margin="0,0,10,0"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="DiscographyBtn_Click"
                                Content="Show all"
                                FontSize="13.5"
                                FontWeight="Bold"
                                Foreground="DarkGray"
                                MouseEnter="SeeMoreBtn_MouseEnter"
                                MouseLeave="SeeMoreBtn_MouseLeave" />
                        </Grid>

                        <!--  Filters  -->
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,15"
                            Orientation="Horizontal">

                            <!--  Popular releases  -->
                            <Button
                                Name="PopularBtn"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="PopularBtn_Click"
                                MouseEnter="PopularBtn_MouseEnter"
                                MouseLeave="PopularBtn_MouseLeave">
                                <Border
                                    Name="PopularBorder"
                                    Padding="13,6"
                                    Background="White"
                                    CornerRadius="15">
                                    <TextBlock
                                        Name="PopularText"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="Black"
                                        Text="Popular releases" />
                                </Border>
                            </Button>

                            <!--  Albums  -->
                            <Button
                                Name="AlbumsBtn"
                                Margin="7,0"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="AlbumsBtn_Click"
                                MouseEnter="AlbumsBtn_MouseEnter"
                                MouseLeave="AlbumsBtn_MouseLeave">
                                <Border
                                    Name="AlbumsBorder"
                                    Padding="13,6"
                                    Background="#2a2a2a"
                                    CornerRadius="15">
                                    <TextBlock
                                        Name="AlbumsText"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="Albums" />
                                </Border>
                            </Button>

                            <!--  Singles and Eps  -->
                            <Button
                                Name="SinglesBtn"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="SinglesBtn_Click"
                                MouseEnter="SinglesBtn_MouseEnter"
                                MouseLeave="SinglesBtn_MouseLeave">
                                <Border
                                    Name="SinglesBorder"
                                    Padding="13,6"
                                    Background="#2a2a2a"
                                    CornerRadius="15">
                                    <TextBlock
                                        Name="SinglesText"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="Singles and EPs" />
                                </Border>
                            </Button>
                        </StackPanel>

                        <!--  Items  -->
                        <Controls:StretchyWrapPanel Grid.Row="2">
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                            <Components:CommonItem />
                        </Controls:StretchyWrapPanel>
                    </Grid>

                    <!--  Fans also like  -->
                    <Components:CommonRow Grid.Row="4" Category="Fans also like" />

                    <!--  About  -->
                    <Grid Grid.Row="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="15,30,0,30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <!--  Title  -->
                            <Button
                                Grid.Row="0"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderThickness="0"
                                Content="About"
                                FontSize="24"
                                FontWeight="Bold"
                                Foreground="White" />

                            <!--  Image  -->
                            <Button
                                Name="AboutBtn"
                                Grid.Row="1"
                                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                                MaxWidth="600"
                                Margin="0,12"
                                HorizontalContentAlignment="Stretch"
                                VerticalContentAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Click="AboutBtn_Click"
                                MouseEnter="AboutBtn_MouseEnter"
                                MouseLeave="AboutBtn_MouseLeave">

                                <Border CornerRadius="8">
                                    <Border.Background>
                                        <ImageBrush
                                            AlignmentY="Top"
                                            ImageSource="../../Assets/Images/stopify-icon.ico"
                                            Stretch="Uniform" />
                                    </Border.Background>
                                </Border>
                            </Button>

                            <!--  Info  -->
                            <Grid
                                Grid.Row="1"
                                Margin="40"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                IsHitTestVisible="False">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!--  Monthly listeners  -->
                                <StackPanel
                                    Grid.Row="0"
                                    Margin="0,10"
                                    Orientation="Horizontal">

                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="700,000" />
                                    <TextBlock
                                        Margin="5,0"
                                        VerticalAlignment="Bottom"
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Foreground="White"
                                        Text="monthly listeners" />
                                </StackPanel>

                                <!--  Description  -->
                                <TextBlock
                                    Grid.Row="1"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Text="creator from hungary"
                                    TextTrimming="WordEllipsis"
                                    TextWrapping="Wrap" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
