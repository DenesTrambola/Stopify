<UserControl
    x:Class="Stopify.Presentation.Views.HomeView.HomeRecentPlaysItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.HomeView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Button
        Name="RecentBtn"
        Margin="3,0,3,6"
        HorizontalContentAlignment="Stretch"
        Background="Transparent"
        BorderThickness="0"
        Click="RecentBtn_Click"
        Loaded="RecentBtn_Loaded"
        MouseEnter="RecentBtn_MouseEnter"
        MouseLeave="RecentBtn_MouseLeave">
        <Border
            Name="RecentBorder"
            Height="48.1"
            Background="#494e4e"
            CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Image  -->
                <Border
                    Width="46"
                    Height="46"
                    CornerRadius="4 0 0 4">
                    <Border.Background>
                        <ImageBrush ImageSource="../../Resources/song.jpg" />
                    </Border.Background>
                </Border>

                <!--  Title  -->
                <TextBlock
                    Grid.Column="1"
                    Height="38"
                    Margin="9,7,9,9"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    TextTrimming="WordEllipsis"
                    TextWrapping="Wrap" />

                <!--  Playing  -->
                <TextBlock
                    Name="PlayingIcon"
                    Grid.Column="3"
                    Margin="0,0,13,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                    FontSize="16"
                    Foreground="#24a853"
                    Text="&#xe473;"
                    Visibility="Hidden" />

                <!--  Play/Pause  -->
                <Button
                    Name="PlayBtn"
                    Grid.Column="2"
                    Height="35"
                    Margin="0,0,8,1"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="PlayBtn_Click"
                    MouseEnter="PlayBtn_MouseEnter"
                    MouseLeave="PlayBtn_MouseLeave"
                    Visibility="Hidden">
                    <Button.Effect>
                        <DropShadowEffect
                            BlurRadius="8"
                            Opacity="0.5"
                            ShadowDepth="3"
                            Color="Black" />
                    </Button.Effect>

                    <Border
                        Name="PlayBorder"
                        Width="33"
                        Height="33"
                        Background="#3adf74"
                        CornerRadius="30">
                        <TextBlock
                            Name="PlayIcon"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="../../Resources/#Font Awesome 6 Free Solid"
                            FontSize="16"
                            Foreground="Black"
                            Text="&#xf04b;" />
                    </Border>
                </Button>
            </Grid>
        </Border>
    </Button>
</UserControl>
