<Page
    x:Class="Stopify.Presentation.Views.HomeView.HomeViewMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Stopify.Presentation.Views.CommonViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.HomeView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    d:DesignWidth="500"
    Background="Transparent"
    Loaded="HomePage_Loaded"
    SizeChanged="HomePage_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Sticky Header  -->
        <Border
            Name="StickyHeader"
            Grid.Row="0"
            Height="0"
            Padding="0,16,0,0"
            CornerRadius="8 8 0 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,4">
                    <GradientStop x:Name="StickyHeaderBg" Offset="0" Color="Transparent" />
                    <GradientStop Offset="1" Color="#121212" />
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel x:Name="HeaderFilterBtns" Orientation="Horizontal">

                <!--  All Filter Button  -->
                <Border
                    Name="HeaderAllBorder"
                    Margin="15.5,15.5,0,15.5"
                    VerticalAlignment="Top"
                    Background="White"
                    CornerRadius="17">
                    <Button
                        Name="HeaderAllBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="AllBtn_Click"
                        Content="All"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        MouseEnter="AllBtn_MouseEnter"
                        MouseLeave="AllBtn_MouseLeave" />
                </Border>

                <!--  Music Filter Button  -->
                <Border
                    Name="HeaderMusicBorder"
                    Margin="7,15.5,0,0"
                    VerticalAlignment="Top"
                    Background="#585f5f"
                    CornerRadius="17">
                    <Button
                        Name="HeaderMusicBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MusicBtn_Click"
                        Content="Music"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        MouseEnter="MusicBtn_MouseEnter"
                        MouseLeave="MusicBtn_MouseLeave" />
                </Border>

                <!--  Podcasts Filter Button  -->
                <Border
                    Name="HeaderPodcastsBorder"
                    Margin="7,15.5,0,0"
                    VerticalAlignment="Top"
                    Background="#585f5f"
                    CornerRadius="17">
                    <Button
                        Name="HeaderPodcastsBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PodcastsBtn_Click"
                        Content="Podcasts"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        MouseEnter="PodcastsBtn_MouseEnter"
                        MouseLeave="PodcastsBtn_MouseLeave" />
                </Border>
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer
            Name="Scroller"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            ScrollChanged="Scroller_ScrollChanged"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Name="HomePagePanel">
                <StackPanel>
                    <StackPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop x:Name="ScrollerBg" Offset="0" Color="Transparent" />
                            <GradientStop Offset="1" Color="#121212" />
                        </LinearGradientBrush>
                    </StackPanel.Background>

                    <!--  Filter Buttons  -->
                    <Border
                        Name="MainHeader"
                        Padding="0,16,0,0"
                        CornerRadius="8 8 0 0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,4">
                                <GradientStop x:Name="MainHeaderBg" Offset="0" Color="Transparent" />
                                <GradientStop Offset="1" Color="#121212" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel x:Name="FilterBtns" Orientation="Horizontal">

                            <!--  All Filter Button  -->
                            <Border
                                Name="AllBorder"
                                Margin="15.5,15.5,0,15.5"
                                VerticalAlignment="Top"
                                Background="White"
                                CornerRadius="17">
                                <Button
                                    Name="AllBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="AllBtn_Click"
                                    Content="All"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    MouseEnter="AllBtn_MouseEnter"
                                    MouseLeave="AllBtn_MouseLeave" />
                            </Border>

                            <!--  Music Filter Button  -->
                            <Border
                                Name="MusicBorder"
                                Margin="7,15.5,0,0"
                                VerticalAlignment="Top"
                                Background="#585f5f"
                                CornerRadius="17">
                                <Button
                                    Name="MusicBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="MusicBtn_Click"
                                    Content="Music"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    MouseEnter="MusicBtn_MouseEnter"
                                    MouseLeave="MusicBtn_MouseLeave" />
                            </Border>

                            <!--  Podcasts Filter Button  -->
                            <Border
                                Name="PodcastsBorder"
                                Margin="7,15.5,0,0"
                                VerticalAlignment="Top"
                                Background="#585f5f"
                                CornerRadius="17">
                                <Button
                                    Name="PodcastsBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="PodcastsBtn_Click"
                                    Content="Podcasts"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    MouseEnter="PodcastsBtn_MouseEnter"
                                    MouseLeave="PodcastsBtn_MouseLeave" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  Recent Playlists/Artists  -->
                    <Grid Margin="12,23,12,0">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Name="RecentCol1" Width="*" />
                            <ColumnDefinition Name="RecentCol2" Width="*" />
                            <ColumnDefinition Name="RecentCol3" Width="Auto" />
                            <ColumnDefinition Name="RecentCol4" Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <local:HomeViewRecents
                            x:Name="Recent1"
                            Grid.Row="0"
                            Grid.Column="0" />
                        <local:HomeViewRecents
                            x:Name="Recent2"
                            Grid.Row="0"
                            Grid.Column="1" />
                        <local:HomeViewRecents
                            x:Name="Recent3"
                            Grid.Row="1"
                            Grid.Column="0" />
                        <local:HomeViewRecents
                            x:Name="Recent4"
                            Grid.Row="1"
                            Grid.Column="1" />
                        <local:HomeViewRecents
                            x:Name="Recent5"
                            Grid.Row="2"
                            Grid.Column="0" />
                        <local:HomeViewRecents
                            x:Name="Recent6"
                            Grid.Row="2"
                            Grid.Column="1" />
                        <local:HomeViewRecents
                            x:Name="Recent7"
                            Grid.Row="3"
                            Grid.Column="0" />
                        <local:HomeViewRecents
                            x:Name="Recent8"
                            Grid.Row="3"
                            Grid.Column="1" />
                    </Grid>
                </StackPanel>

                <!--  Recently played  -->
                <common:CommonRowView Margin="0,31,0,0" Category="Recently played" />
                <!--  Your favorite artists  -->
                <common:CommonRowView Category="Your favorite artists" />
                <!--  Jump back in  -->
                <common:CommonRowView Category="Jump back in" />
                <!--  Best of artists  -->
                <common:CommonRowView Category="Best of artists" />
                <!--  Recommended for today  -->
                <common:CommonRowView Category="Recommended for today" />
                <!--  New releases for you  -->
                <common:CommonRowView Category="New releases for you" />
                <!--  More like {Artist}  -->
                <common:CommonRowView Category="More like {Artist}" />
                <!--  Fresh new music  -->
                <common:CommonRowView Category="Fresh new music" />
                <!--  More like {Artist}  -->
                <common:CommonRowView Category="More like {Artist}" />
                <!--  Popular artists  -->
                <common:CommonRowView Category="Popular artists" />
                <!--  For fans of {Artist}  -->
                <common:CommonRowView Category="For fans of {Artist}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
