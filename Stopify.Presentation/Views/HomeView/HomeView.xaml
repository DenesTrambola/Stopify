<UserControl
    x:Class="Stopify.Presentation.Views.HomeView.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Components="clr-namespace:Stopify.Presentation.Views.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views.HomeView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="500"
    Background="Transparent"
    Loaded="HomePage_Loaded"
    SizeChanged="HomePage_SizeChanged"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Sticky Header  -->
        <Border
            Name="StickyHeader"
            Grid.Row="0"
            Height="0"
            Padding="0,16,0,0"
            CornerRadius="8 8 0 0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,4">
                    <GradientStop x:Name="StickyHeaderBg" Offset="0" Color="Transparent" />
                    <GradientStop Offset="1" Color="#121212" />
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel x:Name="HeaderFilterBtns" Orientation="Horizontal">

                <!--  All Filter Button  -->
                <Border
                    Name="HeaderAllBorder"
                    Margin="15.5,15.5,0,15.5"
                    VerticalAlignment="Top"
                    Background="White"
                    CornerRadius="17">
                    <Button
                        Name="HeaderAllBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="AllBtn_Click"
                        Content="All"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        MouseEnter="AllBtn_MouseEnter"
                        MouseLeave="AllBtn_MouseLeave" />
                </Border>

                <!--  Music Filter Button  -->
                <Border
                    Name="HeaderMusicBorder"
                    Margin="7,15.5,0,0"
                    VerticalAlignment="Top"
                    Background="#585f5f"
                    CornerRadius="17">
                    <Button
                        Name="HeaderMusicBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="MusicBtn_Click"
                        Content="Music"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        MouseEnter="MusicBtn_MouseEnter"
                        MouseLeave="MusicBtn_MouseLeave" />
                </Border>

                <!--  Podcasts Filter Button  -->
                <Border
                    Name="HeaderPodcastsBorder"
                    Margin="7,15.5,0,0"
                    VerticalAlignment="Top"
                    Background="#585f5f"
                    CornerRadius="17">
                    <Button
                        Name="HeaderPodcastsBtn"
                        Padding="13,6,13,8"
                        Background="Transparent"
                        BorderThickness="0"
                        Click="PodcastsBtn_Click"
                        Content="Podcasts"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="White"
                        MouseEnter="PodcastsBtn_MouseEnter"
                        MouseLeave="PodcastsBtn_MouseLeave" />
                </Border>
            </StackPanel>
        </Border>

        <!--  Main Content  -->
        <ScrollViewer
            Name="Scroller"
            Grid.Row="1"
            HorizontalScrollBarVisibility="Disabled"
            ScrollChanged="Scroller_ScrollChanged"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Name="HomePagePanel" Background="#121212">
                <StackPanel Margin="0,0,0,31">
                    <StackPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop x:Name="ScrollerBg" Offset="0" Color="Transparent" />
                            <GradientStop Offset="1" Color="#121212" />
                        </LinearGradientBrush>
                    </StackPanel.Background>

                    <!--  Filter Buttons  -->
                    <Border
                        Name="MainHeader"
                        Padding="0,16,0,0"
                        CornerRadius="8 8 0 0">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,4">
                                <GradientStop x:Name="MainHeaderBg" Offset="0" Color="Transparent" />
                                <GradientStop Offset="1" Color="#121212" />
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel x:Name="FilterBtns" Orientation="Horizontal">

                            <!--  All Filter Button  -->
                            <Border
                                Name="AllBorder"
                                Margin="15.5,15.5,0,15.5"
                                VerticalAlignment="Top"
                                Background="White"
                                CornerRadius="17">
                                <Button
                                    Name="AllBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="AllBtn_Click"
                                    Content="All"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="Black"
                                    MouseEnter="AllBtn_MouseEnter"
                                    MouseLeave="AllBtn_MouseLeave" />
                            </Border>

                            <!--  Music Filter Button  -->
                            <Border
                                Name="MusicBorder"
                                Margin="7,15.5,0,0"
                                VerticalAlignment="Top"
                                Background="#585f5f"
                                CornerRadius="17">
                                <Button
                                    Name="MusicBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="MusicBtn_Click"
                                    Content="Music"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    MouseEnter="MusicBtn_MouseEnter"
                                    MouseLeave="MusicBtn_MouseLeave" />
                            </Border>

                            <!--  Podcasts Filter Button  -->
                            <Border
                                Name="PodcastsBorder"
                                Margin="7,15.5,0,0"
                                VerticalAlignment="Top"
                                Background="#585f5f"
                                CornerRadius="17">
                                <Button
                                    Name="PodcastsBtn"
                                    Padding="13,6,13,8"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="PodcastsBtn_Click"
                                    Content="Podcasts"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    MouseEnter="PodcastsBtn_MouseEnter"
                                    MouseLeave="PodcastsBtn_MouseLeave" />
                            </Border>
                        </StackPanel>
                    </Border>

                    <!--  Recent Playlists/Artists  -->

                    <ItemsControl ItemsSource="{Binding RecentPlays}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="{Binding ColumnCount}" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:HomeRecentPlaysItem />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>

                <!--  Category Rows  -->
                <ItemsControl ItemsSource="{Binding Rows}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Components:CommonRow />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
