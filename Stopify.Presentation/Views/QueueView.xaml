<UserControl
    x:Class="Stopify.Presentation.Views.QueueView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:NowPlaying="clr-namespace:Stopify.Presentation.Views.NowPlayingView"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Stopify.Presentation.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid Grid.Row="0" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Queue  -->
            <Button
                Name="QueueBtn"
                Grid.Column="0"
                Margin="0,0,1,0"
                Padding="12,14,12,7"
                Background="Transparent"
                BorderBrush="#1ed760"
                BorderThickness="0,0,0,2"
                Click="QueueBtn_Click"
                Content="Queue"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                MouseEnter="QueueBtn_MouseEnter"
                MouseLeave="QueueBtn_MouseLeave" />

            <!--  Recently Played  -->
            <Button
                Name="RecentBtn"
                Grid.Column="1"
                Padding="12,14,12,7"
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0,0,0,2"
                Click="RecentBtn_Click"
                Content="Recently played"
                FontSize="14"
                FontWeight="Bold"
                Foreground="DarkGray"
                MouseEnter="RecentBtn_MouseEnter"
                MouseLeave="RecentBtn_MouseLeave" />

            <!--  Close  -->
            <Button
                Name="CloseBtn"
                Grid.Column="2"
                Margin="2,4,9,0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                Background="Transparent"
                BorderThickness="0"
                Click="CloseBtn_Click"
                MouseEnter="CloseBtn_MouseEnter"
                MouseLeave="CloseBtn_MouseLeave">
                <Border
                    Name="CloseBorder"
                    Width="29"
                    Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}"
                    Background="#121212"
                    CornerRadius="30">
                    <TextBlock
                        Name="CloseText"
                        Margin="0,0,1,1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="SemiBold"
                        Foreground="DarkGray"
                        Text="✕" />
                </Border>
            </Button>
        </Grid>

        <!--  Main  -->
        <ScrollViewer Grid.Row="1" Margin="0,0,0,13">
            <StackPanel>
                <!--  Now Playing  -->
                <StackPanel
                    Name="NowPlaying"
                    Height="Auto"
                    Margin="0,28">
                    <TextBlock
                        Margin="15,0,0,5"
                        FontSize="15.5"
                        FontWeight="Bold"
                        Foreground="WhiteSmoke"
                        Text="Now playing" />
                    <NowPlaying:NowPlayingItem />
                </StackPanel>

                <!--  Next from  -->
                <StackPanel>
                    <StackPanel Name="NextFrom" Orientation="Horizontal">
                        <TextBlock
                            Margin="15,0,0,5"
                            FontSize="15.5"
                            FontWeight="Bold"
                            Foreground="WhiteSmoke"
                            Text="Next from:" />
                        <Button
                            Name="NextFromArtistBtn"
                            Margin="5,0,0,5"
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="NextFromArtistBtn_Click"
                            FontSize="15.5"
                            FontWeight="Bold"
                            Foreground="WhiteSmoke"
                            MouseEnter="NextFromArtistBtn_MouseEnter"
                            MouseLeave="NextFromArtistBtn_MouseLeave">
                            <TextBlock
                                Name="NextFromArtistText"
                                MaxHeight="20"
                                Text="Azahriah"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap" />
                        </Button>
                    </StackPanel>
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                    <NowPlaying:NowPlayingItem />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
